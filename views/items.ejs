<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Inventory</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <% if (error) { %> 
        <%- include('partials/error', { error: error }) %>
    <% } %>
    
    <h1>Click on an item to view<br>and edit its information.</h1>
    
    <!-- Item Addition Table -->
    <table>
        <thead>
            <tr>
                <form action="/items" method="POST">
                    <th>
                        <label for="newItem">Add New Item</label>
                    </th>
                    <td colspan="2">
                        <input type="text" name="newItem" id="newItem" required>
                        <button type="submit">Add</button>
                    </td>
                </form>
            </tr>
        </thead>
    </table>

    <!-- Item/Category Table -->
    <table>
        <thead>
            <tr>
                <th>Item</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            <% groceryItems.forEach(item => { %>
                <tr>
                    <td>
                        <a href="items/<%= item.id %> "><%= item.name %></a>
                    </td>
                    <td>
                        <a href="items/<%= item.id %> "><%= item.category %></a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    
</body>
</html>