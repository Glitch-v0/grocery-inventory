<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grocery Inventory</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <h1>Edit all information about the item below.</h1>
    
    <!-- Edit Button to Unlock the Form -->
    <button type="button" id="editButton">Edit Item Data</button>

    <form action="/update-item" method="POST" id="itemForm">
        <table>
            <tbody>
                <tr>
                    <td><label for="itemName">Item Name:</label></td>
                    <td><input type="text" id="itemName" name="itemName" value="<%= itemStats[0].name %>" disabled></td>
                </tr>
                <% itemCategories.forEach((category) => { %>
                    <tr>
                        <td><label for="category_<%= category.index %>">Category:</label></td>
                        <td>
                            <select id="category_<%= category.index %>" name="category_<%= category.index %>" required>
                                <% categories.forEach(category => { %>
                                    <option disabled value="<%= category.name %>" <%= category.name === itemStats[0].category ? 'selected' : '' %>><%= category.name %></option>
                                <% }) %>
                            </select>
                        </td>
                    </tr>
                <% }) %>
                <% itemStats.forEach((item, index) => { %>
                    <tr>
                        <td><label for="price-<%= index %>"><%= item.region_name %> Pricing ($):</label></td>
                        <td><input type="text" id="price-<%= index %>" name="prices[<%= index %>]" value="<%= item.price %>" disabled></td>
                        <input type="hidden" name="regions[<%= index %>]" value="<%= item.region_name %>">
                        <input type="hidden" name="itemIds[<%= index %>]" value="<%= item.id %>">
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <button type="submit" id="submitButton" disabled>Update Item</button>
    </form>

    <a href="/items">
        <button type="button">Back</button>
    </a>

    <script>
        const editButton = document.getElementById('editButton');
const submitButton = document.getElementById('submitButton');
const formElements = document.querySelectorAll('#itemForm input[type="text"], #itemForm select');
const rows = document.querySelectorAll('#itemForm table tbody tr');
const categorySelect = document.getElementById('category');

editButton.addEventListener('click', function() {
    if (editButton.textContent === 'Edit Item Data') {
        // Enable inputs and select, submit button
        formElements.forEach(element => element.disabled = false);
        submitButton.disabled = false;
        editButton.textContent = 'Cancel';

        // Hide rows with <span> elements (info-only rows)
        rows.forEach(row => {
            const input = row.querySelector('input');
            if (input && input.disabled) {
                row.style.display = 'none';
            }
        });
    } else {
        // Disable inputs and select, submit button
        formElements.forEach(element => element.disabled = true);
        submitButton.disabled = true;

        // Revert button text
        editButton.textContent = 'Edit Item Data';

        // Show all rows
        rows.forEach(row => row.style.display = '');

        // Reset form data
        document.getElementById('itemForm').reset();
    }
});

    </script>
</body>
</html>